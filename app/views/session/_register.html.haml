%section#register.register
    %h1 Register
  
    =form_tag register_url
        =label_for :email
        =text_field_tag :email, "", placeholder: "e.g.: joe.bloggs@example.com"
        
        =label_for :password
        =password_field_for :password
        
        =label_for :passwordConfirmation
        =password_field_for :passwordConformation
        
        =submit_tag "Register"
        
